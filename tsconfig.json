{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "nodenext",
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "error-alarm/**/*.ts",
    "url-parser/**/*.ts",
    "zoo/**/*.ts",
    "*.js"
  ],
  "exclude": ["node_modules", "dist"]
}
