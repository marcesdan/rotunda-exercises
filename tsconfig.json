{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*.js", "**/src/**/*.ts", "**/test/**/*.ts", "jest.config.js"]
}
